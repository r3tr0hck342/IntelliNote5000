{
  "name": "intellinote",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "start-desktop": "npm run tauri dev",
    "build-desktop": "npm run tauri build",
    "package:mac:test": "npm run verify:platforms && npm run tauri:build:unsigned && node tools/package-mac-test.mjs",
    "tauri:build:unsigned": "node tools/release-tauri.mjs --unsigned",
    "tauri:build:signed": "RELEASE_BUILD=1 node tools/release-tauri.mjs --signed",
    "start-mobile": "npm run build && npx cap sync && (npx cap open android || npx cap open ios)",
    "sync-mobile": "npm run build && npx cap sync",
    "native:ios:gen": "npm run build && npx cap sync ios",
    "native:ios:open": "npx cap open ios",
    "native:android:gen": "npm run build && npx cap sync android",
    "native:android:open": "npx cap open android",
    "ios:archive": "node tools/ios-archive.mjs",
    "android:assemble:release": "cd android && ./gradlew assembleRelease",
    "android:bundle:release": "cd android && ./gradlew bundleRelease",
    "verify:platforms": "ts-node --esm verification_scripts/verify_platforms.ts",
    "verify:providers": "ts-node --esm verification_scripts/verify_providers.ts",
    "verify:release": "node tools/verify-release.mjs",
    "test:transcript": "ts-node --esm verification_scripts/transcript_pipeline.test.ts",
    "test:unit": "ts-node --esm verification_scripts/unit.test.ts",
    "test": "npm run test:unit",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx"
  },
  "dependencies": {
    "@capacitor/core": "^6.1.1",
    "@capacitor/app": "^6.0.0",
    "@capacitor/status-bar": "^6.0.0",
    "@google/genai": "^1.28.0",
    "@capacitor/android": "^6.1.1",
    "@capacitor/ios": "^6.1.1",
    "@tauri-apps/api": "^1.6.0",
    "capacitor-secure-storage-plugin": "^0.8.0",
    "mermaid": "^10.9.1",
    "pdfjs-dist": "^4.4.168",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-draggable": "^4.4.6",
    "react-quill": "^2.0.0",
    "react-resizable": "^3.0.5",
    "quill": "^1.3.7",
    "turndown": "^7.1.3",
    "mammoth": "^1.7.2"
  },
  "devDependencies": {
    "@capacitor/cli": "^6.1.1",
    "@tauri-apps/cli": "^1.6.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.17.0",
    "@typescript-eslint/parser": "^7.17.0",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4",
    "vite": "^5.3.5"
  }
}
